<?xml version="1.0"?>
<tryton>
    <data>
        <!-- ######## -->
        <!-- # User # -->
        <!-- ######## -->
        <record model="ir.ui.view" id="user_view_form">
            <field name="model">library.user</field>
            <field name="type">form</field>
            <field name="name">user_form</field>
        </record>
        <record model="ir.ui.view" id="user_view_list">
            <field name="model">library.user</field>
            <field name="type">tree</field>
            <field name="name">user_list</field>
        </record>
        <record model="ir.action.act_window" id="act_open_user">
            <field name="name">Users</field>
            <field name="res_model">library.user</field>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="user_view_list"/>
            <field name="act_window" ref="act_open_user"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="user_view_form"/>
            <field name="act_window" ref="act_open_user"/>
        </record>
        <menuitem parent="library.menu_library" sequence="30" action="act_open_user" id="menu_open_user"/>
        <record model="ir.action.act_window" id="act_open_late_user">
            <field name="name">Late Users</field>
            <field name="res_model">library.user</field>
            <field name="domain" eval="[('expected_return_date', '&lt;', Date())]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_late_user_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="user_view_list"/>
            <field name="act_window" ref="act_open_late_user"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_late_user_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="user_view_form"/>
            <field name="act_window" ref="act_open_late_user"/>
        </record>
        <menuitem parent="library.menu_library" sequence="40" action="act_open_late_user" id="menu_open_late_user"/>
        <!-- ############# -->
        <!-- # Borrowing # -->
        <!-- ############# -->
        <record model="ir.ui.view" id="user_borrowing_view_form">
            <field name="model">library.user.borrowing</field>
            <field name="type">form</field>
            <field name="name">user_borrowing_form</field>
        </record>
        <record model="ir.ui.view" id="user_borrowing_view_list">
            <field name="model">library.user.borrowing</field>
            <field name="type">tree</field>
            <field name="name">user_borrowing_list</field>
        </record>
        <record model="ir.action.act_window" id="act_open_user_borrowing">
            <field name="name">Borrowings</field>
            <field name="res_model">library.user.borrowing</field>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_borrowing_view_list">
            <field name="sequence" eval="10"/>
            <field name="view" ref="user_borrowing_view_list"/>
            <field name="act_window" ref="act_open_user_borrowing"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_borrowing_view_form">
            <field name="sequence" eval="20"/>
            <field name="view" ref="user_borrowing_view_form"/>
            <field name="act_window" ref="act_open_user_borrowing"/>
        </record>
        <!-- ######## -->
        <!-- # Book # -->
        <!-- ######## -->
        <record model="ir.ui.view" id="book_view_form">
            <field name="model">library.book</field>
            <field name="inherit" ref="library.book_view_form"/>
            <field name="name">book_form</field>
        </record>
        <record model="ir.ui.view" id="book_view_list">
            <field name="model">library.book</field>
            <field name="inherit" ref="library.book_view_list"/>
            <field name="name">book_list</field>
        </record>
        <!-- ############# -->
        <!-- # Exemplary # -->
        <!-- ############# -->
        <record model="ir.ui.view" id="exemplary_view_form">
            <field name="model">library.book.exemplary</field>
            <field name="inherit" ref="library.exemplary_view_form"/>
            <field name="name">exemplary_form</field>
        </record>
        <record model="ir.ui.view" id="exemplary_view_list">
            <field name="model">library.book.exemplary</field>
            <field name="inherit" ref="library.exemplary_view_list"/>
            <field name="name">exemplary_list</field>
        </record>
        <!-- ########### -->
        <!-- # Relates # -->
        <!-- ########### -->
        <!-- User -> Borrowing -->
        <record model="ir.action.act_window" id="act_open_user_borrowings">
            <field name="name">Borrowings</field>
            <field name="res_model">library.user.borrowing</field>
            <field name="domain" eval="[('user', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_borrowings_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="user_borrowing_view_form"/>
            <field name="act_window" ref="act_open_user_borrowings"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_user_borrowings_view2">
            <field name="sequence" eval="1"/>
            <field name="view" ref="user_borrowing_view_form"/>
            <field name="act_window" ref="act_open_user_borrowings"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_user_borrowing_domain_ongoing">
            <field name="name">Ongoing</field>
            <field name="sequence" eval="10"/>
            <field name="domain" eval="[('return_date', '=', None)]" pyson="1"/>
            <field name="act_window" ref="act_open_user_borrowings"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_user_borrowing_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="20"/>
            <field name="act_window" ref="act_open_user_borrowings"/>
        </record>
        <record model="ir.action.keyword" id="act_open_user_borrowings_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">library.user,-1</field>
            <field name="action" ref="act_open_user_borrowings"/>
        </record>
        <!-- Book -> Borrowing -->
        <record model="ir.action.act_window" id="act_open_book_borrowing">
            <field name="name">Borrowings</field>
            <field name="res_model">library.user.borrowing</field>
            <field name="domain" eval="[('exemplary.book', '=', Eval('active_id'))]" pyson="1"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_book_borrowing_view1">
            <field name="sequence" eval="1"/>
            <field name="view" ref="user_borrowing_view_form"/>
            <field name="act_window" ref="act_open_book_borrowing"/>
        </record>
        <record model="ir.action.act_window.view" id="act_open_book_borrowing_view2">
            <field name="sequence" eval="1"/>
            <field name="view" ref="user_borrowing_view_form"/>
            <field name="act_window" ref="act_open_book_borrowing"/>
        </record>
        <record model="ir.action.act_window.domain" id="act_book_borrowing_domain_all">
            <field name="name">All</field>
            <field name="sequence" eval="20"/>
            <field name="act_window" ref="act_open_book_borrowing"/>
        </record>
        <record model="ir.action.keyword" id="act_open_book_borrowing_keyword1">
            <field name="keyword">form_relate</field>
            <field name="model">library.user,-1</field>
            <field name="action" ref="act_open_book_borrowing"/>
        </record>
    </data>
</tryton>
